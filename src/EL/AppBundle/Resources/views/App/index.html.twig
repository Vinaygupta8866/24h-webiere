{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/style.css") }}">
{% endblock %}
{% block body %}
    <div class="conteneur">

        <div class="background"></div>
        <div class="menu">
            <img src="https://image.flaticon.com/icons/svg/236/236832.svg" class="avatar">

            <div class="name">{{ user.username | default('Inconnu') | capitalize  }}</div>
            <input type="text" class="recherche" placeholder="Rechercher biere/utilisateur" list="list">
            <datalist id="list">
                {% for biere in bieres %}
                <option value="{{ biere.nom }}">

                    {% endfor %}
            </datalist>
            <div class="texte">
                <div class="menuText"><a href="{{ path('fos_user_profile_show') }}">Profil</a></div>
                <div class="point"></div>
                <div class="menuText"><a href="{{ path('el_user_friend') }}">Mes Amis</a></div>
                <div class="point"></div>
                <div class="menuText"><a href="{{ path('el_app_biere_add') }}">Ajouter Biere</a></div>
                
            </div>
            <img src="https://image.flaticon.com/icons/svg/109/109618.svg" alt="" class="fleche">
            <a href="{{ path('fos_user_security_logout') }}"><img src="https://image.flaticon.com/icons/svg/25/25706.svg" alt="" class="deconnexion"></a>
        </div>
        <div class="contenu">
            {% for biere in bieres %}


                <div class="biere">
                    {{ biere.nom }} <br>
                    {{ biere.type }} <br>
                    {{ biere.degre }} <br>
                </div>


            {% endfor %}

            
        </div>
    </div>


{% endblock %}
