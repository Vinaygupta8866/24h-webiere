<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Webiere{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="{{ asset("css/style.css") }}">
    {#<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">#}


    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="icon" type="image/x-icon" href="https://d30y9cdsu7xlg0.cloudfront.net/png/6597-200.png">
</head>
<body>
<div class="conteneur">

    <div class="background"></div>
    <input type="checkbox" class="fleche">
    <div class="menu">
        <img src="https://image.flaticon.com/icons/svg/236/236832.svg" class="avatar">
        <div class="name">{{ user.username | default('Inconnu') | capitalize }}</div>
        <input type="text" class="recherche" placeholder="Rechercher biere/utilisateur" list="list">
        {#<datalist id="list">#}
        {#{% for biere in bieres %}#}
        {#<option value="{{ biere.nom }}">#}
        {#{% endfor %}#}
        {#</datalist>#}
        <div class="texte">
            <div class="menuText"><a href="{{ path('el_app_homepage') }}">Accueil</a></div>
            <div class="point"></div>
            <div class="menuText"><a href="{{ path('el_user_friend') }}">Mes Amis</a></div>
            <div class="point"></div>
            <div class="menuText"><a href="{{ path('el_app_biere_add') }}">Ajouter Biere</a></div>

        </div>

        <img src="https://image.flaticon.com/icons/svg/109/109618.svg" alt="" class="fleche2">
        <a href="{{ path('fos_user_security_logout') }}"><img src="https://image.flaticon.com/icons/svg/25/25706.svg"
                                                              alt="" class="deconnexion"></a>
    </div>
    <div class="menu2">
        <img src="https://image.flaticon.com/icons/svg/340/340646.svg" alt="" class="hamburger">
        <a href="{{ path('fos_user_profile_show') }}"><img src="https://image.flaticon.com/icons/svg/236/236832.svg"
                                                           class="avatar2"></a>
        <img src="https://image.flaticon.com/icons/svg/149/149852.svg" class="search2">

        <div class="icones">

            <a href="{{ path('el_app_homepage') }}"><img src="https://image.flaticon.com/icons/svg/69/69524.svg" alt="" class="profile2">
            <a href="{{ path('el_user_friend') }}"><img src="https://image.flaticon.com/icons/svg/1/1391.svg" alt="" class="friend2"></a>
            <a href="{{ path('el_app_biere_add') }}"><img src="https://image.flaticon.com/icons/svg/90/90618.svg" alt="" class="friend2"></a>
        </div>


    </div>
    <div class="contenu">

        {% block body %}{% endblock %}

    </div>
    {% block javascripts %}{% endblock %}
</div>

</body>
</html>

